@media (min-width: 500px){
  .panel-left {
    flex: 100 0 auto;
    width: 65%;
    white-space: nowrap;
    padding-right: 0px;
    margin-top: -5px;
    overflow-y: scroll;
    overflow-x: hidden;
  }

  .panel-right {
    flex: 0 1 auto;
    padding-left: 0px;
    width: 100%;
    background: #242424;
    min-width: 400px;
    overflow-y: scroll;
    overflow-x: hidden;
  }

  .table-responsive {
    border: 0px solid #242424 !important;
  }
}

.panel-buffer {
  position: absolute;
  top: 45px !important;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
}

.panel-container {
  display: flex;
  flex-direction: row;
  overflow-y: scroll;
  overflow-x: hidden;
  /* avoid browser level touch actions */
  xtouch-action: none;
  width: 100vw;
  height: 100%;
}

.panel-left {
  flex: 100 0 auto;
  width: 65%;
  white-space: nowrap;
  padding-right: 0px;
  margin-top: -5px;
  overflow-y: scroll;
  overflow-x: hidden;
}

.splitter {
  flex: 0 0 auto;
  width: 5px;
  background: #040404;
  cursor: col-resize;
}

.splitter:hover {
  background: #B6ECF3;
}

.panel-right {
  flex: 0 1 auto;
  padding-left: 0px;
  width: 100%;
  background: #242424;
  min-width: 400px;
  overflow-y: scroll;
  overflow-x: hidden;
}

