html, body {
  width: 100%;
  min-height: 100%;
  margin: 0px;
  padding: 0px;
  color: #A4A4A4;
  font-size:14px;
  font-family:Verdana, Geneva, sans-serif;
  background: #000000;
}

a:link,
a:visited,
a:hover,
a:active {
  text-decoration: none;
}

#navbar-container {
  height: 50px;
}

#navbar {
  background: #242424;
  border-bottom: 5px solid #000;
  border-bottom: 5px solid #000;
  height: 55px;
  padding: 0px 10px 0px 10px;
}

#navbar-header-container {
  height: inherit;
}

#logo {
  padding-top: 17px;
  color: #B6ECF3;
}

.breadcrumb > li + li:before {
    color: #A4A4A4;
    content: "/ ";
    padding: 0px 2px 0px 0px;
    font-size: 20px;
}

.breadcrumb-item:hover a {
  color: #FFFFFF;
}

.breadcrumb-item,
.breadcrumb-item a,
.breadcrumb-item.active {
    color: #A4A4A4;
    font-size: 20px;
}

.breadcrumb-item.active {
    color: #F4F4F4;
}

#search-container {
  display: flex;
  flex: 1 0 100%;
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
}

#search {
  display: flex;
  flex: 1 0 100%;
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
}

#searchbar, #searchbar:focus {
    width: 700px !important;
    background: #444444;
    color: #A4A4A4;
    border: 2px solid #444444;
    border-radius: 3px;
}

#app {
  display : -webkit-flex;
  display : -ms-flexbox;
  display : flex;
  width: 100%;
}

#dashboard-container {
  -webkit-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  background: #000000;
  flex: 1 0 50%;
}

#dashboard {
  display: flex;
  flex-flow: row wrap;
  margin: 50px -5px -5px 0px;
  border-top: 5px solid #000000;
}

#dashboard > .grid-cell {
  flex: 1 0 250px;
  min-height: 250px;
  background: #242424;
  border-bottom: 5px solid #000000;
  border-left: 5px solid #000000;
  padding: 0;
}

{% for card in dashboard %}
#card-container-{{ card.id }} {
  flex-grow: {{ card.flex_grow }} !important;
  flex-shrink: {{ card.flex_shrink }} !important;
  flex-basis: {{ card.width }} !important;
  height: {{ card.height }} !important;
}
{% endfor %}

.grid {
  -webkit-flex-direction: row;
  -ms-flex-direction: row;
  flex-direction: row;
  display: flex;
  overflow: hidden;
}

.grid-cell {
  overflow: hidden;
}

#sidebar-container {
  flex: 0 1 400px;
  min-width: 400px;
  -webkit-flex-wrap: nowrap;
  -ms-flex-wrap: nowrap;
  flex-wrap: nowrap;
  background: #000000;
  border-left: 5px solid #000000;
}

#sidebar {
  position: fixed;
  padding: 0px;
  margin-top: 55px;
  margin-bottom: 5px;
  background: #242424;
  min-width: 200px;
  width: 100%;
  height: 100%;
}

.table-responsive {
  background: #242424 !important;
  border: 0px !important;
  width: 400px !important;
  overflow: auto !important;
}

.treegrid-node {
  background: #242424 !important;
  border: 0px !important;
}

tr {
  background: #242424 !important;
  border: 1px solid #444444 !important;
}

td {
  background: #242424 !important;
  border: 1px solid #444444 !important;
  padding: 0px 0px 0px 5px !important;
  width: 50%;
}

.indent {
  margin-left: 6px !important;
  margin-right: 6px !important;
}

#sidebar-key {
  word-wrap: break-word !important;
}

#sidebar-value {
}

*{
  box-sizing : border-box;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
