input[type=text], input[type=text]:focus,
textarea, textarea:focus {
  -moz-box-shadow: 0 0 0px;
  -webkit-box-shadow: 0 0 0px;
  outline: none;
}

input[type=text]:hover, textarea:hover,
input[type=text]:focus, textarea:focus {
  outline: 1px solid #A4A4A4;
}

.btn.active.focus, .btn.active:focus, .btn.focus,
.btn:active.focus, .btn:active:focus, .btn:focus {
  -moz-box-shadow: 0 0 0px;
  -webkit-box-shadow: 0 0 0px;
  outline: none;
}

.sidebar-val-input,
.sidebar-val-input:active,
.sidebar-val-input:focus,
.sidebar-val-input:before,
.sidebar-val-input:after {
    background: #343434;
    color: #A4A4A4;
    border: 0px solid #242424;
    font-size: 14px;
    font-family: Verdana, Geneva, sans-serif;
    width: 100%;
    box-shadow: none !important;
}

.sidebar-val-input:active, .sidebar-val-input:hover {
    outline: 1px solid #A4A4A4;
    box-shadow: none !important;
}

.slider.slider-horizontal {
    width: 100%;
}

.slider-track {
    height: 5px !important;
}

.slider-selection {
    background: #343434;
}

.slider-track-high {
    background: #444444;
}

.slider-handle.custom {
    width: 0px;
    top: -4px !important;
}

.slider-handle.custom::before {/
    line-height: 15px;
    font-size: 15px;
    color: #B6ECF3;
    content: "\25bc";
    background: transparent;;
    top: inherit;
    margin-left: 3px;
}

.bootstrap-switch-wrapper {
    width: 160px;
}

.bootstrap-switch-container:before {
    width: 240px;
    margin-left: -80px;
}

.bootstrap-switch-container:after {
    width: 240px;
    margin-left: 0px;
}

.bootstrap-switch-handle-on,
.bootstrap-switch-handle-off,
.bootstrap-switch-label {
    width: 80px;
}

.bootstrap-switch {
    border: 1px solid #444444;
    margin-top: -1px;
    margin-bottom: -1px;
}

.bootstrap-switch:hover,
.bootstrap-switch:active,
.bootstrap-switch:focus,
.bootstrap-switch.bootstrap-switch-focused {
    border: 1px solid #444444 !important;
    box-shadow: none !important;
    outline: none !important;
    -moz-box-shadow: 0 0 0px !important;
    -webkit-box-shadow: 0 0 0px !important;
}

.bootstrap-switch:hover {
    border: 1px solid #A4A4A4 !important;
}

.bootstrap-switch .bootstrap-switch-handle-off.bootstrap-switch-primary,
.bootstrap-switch .bootstrap-switch-handle-on.bootstrap-switch-primary {
    background: #B6ECF3;
    color: #242424;

}

.bootstrap-switch .bootstrap-switch-handle-off.bootstrap-switch-default {
    background: #242424;
    color: #B6ECF3;
}

.bootstrap-switch .bootstrap-switch-label {
    background: #343434;
    color: #A4A4A4;
}

.bootstrap-switch .bootstrap-switch-handle-off,
.bootstrap-switch .bootstrap-switch-handle-on,
.bootstrap-switch .bootstrap-switch-label {
    /*height: 20px;*/
    /*padding-bottom: 4px;*/
}

.bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn) {
    width: 100%;
}

.bootstrap-select.btn-group .btn,
.bootstrap-select.btn-group .btn:hover,
.bootstrap-select.btn-group .btn:active,
.bootstrap-select.btn-group .btn:focus {
    background: #444444;
    color: #A4A4A4;
    border: 0px solid #343434;
}

.dropdown-menu.open,
.dropdown-menu.inner {
    background: #343434;
    border: 0px solid #343434;
    padding-top: 0px;
    padding-bottom: 0px;
}

.dropdown-menu>li>a:focus {
    background: #343434;
}

.dropdown-menu>li>a:hover {
    background: #444444;
    border: 0px solid #343434 !important;
}

.dropdown-menu>li>a>span {
    color: #A4A4A4;
}

.dropdown-menu>li>a>span:active {
    color: #B6ECF3;
}

.bootstrap-select.btn-group .dropdown-menu>.selected>a,
.bootstrap-select.btn-group .dropdown-menu>.selected>a:focus,
.bootstrap-select.btn-group .dropdown-menu>.selected>a:active {
    background: #343434 !important;
    background-color: #343434;
    border: 0px solid #A4A4A4 !important;
    box-shadow: none !important;
    outline: none !important;
}

.bootstrap-select.btn-group .btn:focus,
.bootstrap-select.btn-group .btn:active {
    box-shadow: none !important;
    outline: none !important;
}

.jsoneditor {
    resize: vertical;
    background: #343434 !important;
    border: 0px solid #343434 !important;
}

.jsoneditor-poweredBy {
    display: none;
}

.jsoneditor-menu {
    background: #343434 !important;
    border: 0px solid #343434 !important;
}

div.jsoneditor-menu>button:focus,
div.jsoneditor-menu>div.jsoneditor-modes>button:focus {
    border: 0px solid #A4A4A4 !important;
    box-shadow: none !important;
    outline: none !important;
}

