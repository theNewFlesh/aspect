#navbar-container {
}

#navbar {
  top: -5px;
  background: #242424;
  border-bottom: 5px solid #000;
  height: 45px;
}

#navbar-header-container {
  padding: 0px 15px 0px 15px !important;
}

#logo {
  padding-top: 18px;
  color: #B6ECF3;
}

.breadcrumb {
  margin-top: -22px;
}

.breadcrumb > li + li:before {
    color: #B6ECF3;
    content: ".";
    margin: 0px -5px 0px -5px;
    font-size: 40px;
}

.breadcrumb-item:hover a {
  color: #FFFFFF;
}

.breadcrumb-item,
.breadcrumb-item a {
    color: #A4A4A4;
    font-size: 20px;
}

.breadcrumb-item.active a {
    color: #F4F4F4;
    font-size: 20px;
}

#breadcrumb-last-dot:before {
  content: '';
  margin: 0px -10px 0px -10px;
}

#search-container {
  display: flex !important;
  flex: 1 0 50px !important;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  align-items: center;
}

#search {
  display: flex !important;
  flex: 1 0 50px !important;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
}

#searchbar, #searchbar:focus, #searchbar:hover {
    width: 100% !important;
    background: #444444;
    color: #A4A4A4;
    border: 2px solid #444444;
    border-radius: 3px;
}

#sidebar-btn, #sidebar-btn:before, #sidebar-btn:after, #sidebar-btn:hover {
  display: flex !important;
  flex: 1 0 50px !important;
  align-items: center;
  background: #444444;
  color: #A4A4A4;
  width: 35px;
  margin: 10px 0px 10px 10px !important;
  padding-left: 13px;
}

#sidebar-btn:hover {
  background: #A4A4A4;
  color: #444444;
}

#sidebar-icon {
  align-items: center;
}

#library {
  background: #242424 !important;
  color: #A4A4A4 !important;
}
