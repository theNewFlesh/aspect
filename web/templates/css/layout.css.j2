@media (min-width: 500px){
  #left {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 70%;
    overflow-y: scroll;
    overflow-x: hidden;
  }

  #right {
    position: absolute;
    bottom: 0;
    right: 0;
    overflow-y: scroll;
    overflow-x: hidden;
    width: 30%;
    border-left: 5px solid #000000;
  }
}

*{
  box-sizing : border-box;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

#left {
  height: 100%;
  top: 80px;
}

#right {
  height: 100%;
  top: 85px;
}
